# sh
# Build configuration script
#
# See http://www.mozilla.org/build/unix.html for build instructions.
#
ac_add_options --enable-application=suite

CC=/usr/local/gcc-3.4.0/bin/gcc
CXX=/usr/local/gcc-3.4.0/bin/g++
export CC # in case it helps
export CXX # in case it helps

CFLAGS="$CFLAGS -Wshadow -fno-builtin-index -Wwrite-strings -fmessage-length=0"
CXXFLAGS="$CXXFLAGS -fuse-cxa-atexit -Wshadow -fno-nonansi-builtins -Wwrite-strings -fmessage-length=0"
export CFLAGS    # needed for NSPR configure
export CXXFLAGS  # needed for NSPR configure

# Options for client.mk.
mk_add_options MOZ_OBJDIR=@TOPSRCDIR@/../obj/debug-gcctrunk/
mk_add_options MOZ_CO_MODULE="SeaMonkeyAll mozilla/tools/trace-malloc mozilla/tools/rb mozilla/tools/jprof mozilla/toolkit mozilla/browser mozilla/chrome mozilla/mail mozilla/composer"
# cls says -jN where N is cpus+1
mk_add_options MOZ_MAKE_FLAGS=-j2
MOZ_MAKE_FLAGS=-j2

# Options for 'configure' (same as command-line options).

ac_add_options --disable-optimize
ac_add_options --enable-debug

ac_add_options --enable-xft
ac_add_options --enable-default-toolkit=gtk2

ac_add_options --enable-mathml
ac_add_options --enable-svg
ac_add_options --enable-svg-renderer-libart
mk_add_options MOZ_INTERNAL_LIBART_LGPL=1
MOZ_INTERNAL_LIBART_LGPL=1

ac_add_options --enable-extensions=all

ac_add_options --enable-crypto

# Commercial tree!
mk_add_options NS_OBJDIR=@TOPSRCDIR@/../obj-ns/debug-gcctrunk/
ac_add_options --with-moz-objs=../obj/debug-gcctrunk/
