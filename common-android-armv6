ac_add_options --with-android-ndk="/usr/local/android-ndk-r6"
ac_add_options --with-android-sdk="/usr/local/android-sdk-linux_x86/platforms/android-8"
ac_add_options --with-android-version=5
ac_add_options --with-android-tools="/usr/local/android-sdk-linux_x86/tools"
ac_add_options --with-android-toolchain="/usr/local/android-ndk-r6/toolchains/arm-linux-androideabi-4.4.3/prebuilt/linux-x86"
ac_add_options --with-android-platform="/usr/local/android-ndk-r6/platforms/android-5/arch-arm"

# android options
ac_add_options --target=arm-linux-androideabi
ac_add_options --with-endian=little

# Needed to run on ARMv5 or ARMv6 devices.
ac_add_options --disable-thumb2
ac_add_options --disable-methodjit # maybe --disable-polyic instead?
