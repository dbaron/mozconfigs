. "$(dirname $MOZCONFIG)/common-svg"

if_enable_jprof

#ac_add_options --disable-jsd
#ac_add_options --disable-accessibility
# ac_add_options --disable-tests

# --enable-toolkit-gtk --enable-toolkit-xlib --enable-toolkit=gtk
# --disable-double-buffer

