export CXX=g++32
export CXXFLAGS=$(echo $CXXFLAGS | sed -e's/-Wno-invalid-offsetof//')
export CXXFLAGS=$(echo $CXXFLAGS | sed -e's/-Wno-strict-aliasing//')
